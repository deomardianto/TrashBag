<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/teks1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/atas"
                android:gravity="center"
                android:text="Jadwal Pengambilan Sampah"
                android:textAllCaps="true"
                android:textColor="@color/hijaubackground"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bulan"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/hijaubackground"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="16dp"
                android:textStyle="bold" />

            <com.github.sundeepk.compactcalendarview.CompactCalendarView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/compactcalendar_view"
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:compactCalendarBackgroundColor="@color/hijaubackground"
                app:compactCalendarCurrentDayBackgroundColor="#046D00"
                app:compactCalendarCurrentSelectedDayBackgroundColor="#046D00"
                app:compactCalendarMultiEventIndicatorColor="#fff"
                app:compactCalendarTargetHeight="250dp"
                app:compactCalendarTextColor="#fff"
                app:compactCalendarTextSize="12sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/linear1"
            android:layout_marginTop="-10dp"
            android:padding="10dp">

            <Button
                android:id="@+id/but1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Berlangganan Sekarang"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="@drawable/button"/>
            <Button
                android:id="@+id/but2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Order Sekarang"
                android:textSize="14dp"
                android:textColor="#fff"
                android:background="@drawable/button"/>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>